.panel.panel-default(ng-controller="ProposicaoController", data-ng-init="fetchData()")
	.panel-heading.text-center
		h2 {{dados.SLP_TIPO_DESC}} {{dados.SLP_NOME}}
	.col-md-6.panel.panel-default.bill-box-height
		.panel-heading
			h3 Informações Gerais

		.panel-body
			.form-horizontal
						.form-group
							.col-sm-4(ng-click="coAuthorsCollapsed = ! coAuthorsCollapsed") Autor(es):
							.col-sm-8
								strong(ng-if="dados.SLP_AUTORES[0]._id === undefined") {{dados.SLP_AUTORES[0].SLPa_NOME_FANTASIA}}
								a(href="#/app/parlamentar?id={{dados.SLP_AUTORES[0]._id}}", ng-if="dados.SLP_AUTORES[0]._id != undefined") {{dados.SLP_AUTORES[0].SLPa_NOME_FANTASIA}}
								em.glyphicon.glyphicon-plus-sign(ng-if="dados.SLP_AUTORES.length > 1") 

			.form-horizontal
						.form-group
							.col-sm-4 Temas:
							.col-sm-8
								strong(ng-repeat="tema in dados.SLP_TEMA") {{tema}}
									br

			.form-horizontal(ng-if="dados.SLP_REGIME_TRAMITACAO !== undefined")
						.form-group
							.col-sm-4 Regime:
							.col-sm-8
								strong {{dados.SLP_REGIME_TRAMITACAO}}

			.form-horizontal
						.form-group
							.col-sm-4 Ementa:
							.col-sm-8
								strong {{dados.SLP_EMENTA}}

			.form-horizontal
				.form-group
					.col-sm-4 Documentos:
					.col-sm-8.doc-box-height
						.media(ng-repeat="doc in dados.SLP_DOCUMENTOS")
							.media-left
								a(href="{{doc.SLD_LINK}}", target="_blank")
									img.media-object(src="app/img/document.png" height="50px")
							.media-body
								p.media-heading {{doc.SLD_TIPO}}
								p Data: {{doc.SLD_DATA | date:"dd/MM/yyyy"}}


	.col-md-6.panel.panel-default.bill-box-height
		.panel-heading
			h3 Status Geral

		.panel-body
			.form-horizontal
						.form-group
							.col-sm-4 Data de Apresentação:
							.col-sm-8
								strong {{dados.SLP_DATA_APRESENTACAO | date:'dd/MM/yyyy'}}

			.form-horizontal
						.form-group
							.col-sm-4 Última Ação:
							.col-sm-8
								strong {{dados.SLP_DATA_ATUALIZACAO | date:'dd/MM/yyyy'}}

			.panel.panel-default(ng-repeat="(house, data) in dados.SLP_STATUS | positiveNumber: SLP_STATUS.house.FASE")
				.panel-heading
					h4 {{houseFullName(house)}}

				.panel-body
					.form-horizontal(ng-show="data.FASE !== undefined")
							.form-group
								.col-sm-4 Fase
								.col-sm-8
									strong {{data.FASE}}

					.form-horizontal(ng-show="data.DATA !== undefined")
							.form-group
								.col-sm-4 Data:
								.col-sm-8
									strong {{data.DATA | date:'dd/MM/yyyy'}}

					.form-horizontal(ng-show="data.DESC !== undefined")
							.form-group
								.col-sm-4 Status:
								.col-sm-8
									strong {{data.DESC}}

					.form-horizontal(ng-show="data.ORG_DESC !== undefined")
							.form-group
								.col-sm-4 Órgão Responsável:
								.col-sm-8
									strong {{data.ORG_DESC}}

	.col-md-6.panel.panel-default.bill-box-height(ng-controller="TramitacaoController", data-ng-init="fetchData()", style="overflow:scroll")
		.panel-heading
			h3 Tramitações
		.panel-body
			.panel-panel-default(ng-repeat="tramitacao in dados")
				.form-horizontal
					.form-group
						.col-sm-4 Data:
						.col-sm-8 {{tramitacao.doc.SLT_DATA_TRAMITACAO | date:'dd/MM/yyyy'}}
					.form-group
						.col-sm-4 Origem:
						.col-sm-8 {{tramitacao.doc.SLT_ORGAO_ORIGEM_DESC}}
					.form-group
						.col-sm-4 Descrição:
						.col-sm-8 {{tramitacao.doc.SLT_DESCRICAO_TRAMITACAO}}


	.col-md-6.panel.panel-default.bill-box-height(ng-controller="PollController", data-ng-init="fetchData()")
		.panel-heading
			h3 Votações
		.panel-body
			p(ng-if="dados.length == 0") Não há votações para este projeto de lei.
			.panel-panel-default(ng-repeat="poll in dados")
				.form-horizontal
					.form-group
						.col-sm-4 Data:
						.col-sm-8 {{formattedDate(poll.SLV_DATA_HORA) | date:"dd/MM/yyyy 'às' h:mma"}}
				.form-horizontal
					.form-group
						.col-sm-4 Origem:
						.col-sm-8 {{poll.SLV_OBJETO_VOTACAO}}
				.form-horizontal
					.form-group
						.col-sm-4 Resultado:
						.col-sm-8
							a(ng-click="viewPollDetails()") {{poll.SLV_RESULTADO}} - {{poll.id}}
