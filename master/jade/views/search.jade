div
  h3 Resultado da busca
    small Busque e filtre os resultados

  .row(ng-controller="searchResults" data-ng-init="init()")
    .col-lg-9
      // START panel
      .panel.panel-default
        .panel-heading(ng-if="hasLoaded")
          | {{numero_resultados}} projetos de lei encontrados
          paneltool(tool-refresh="traditional")
        // START table-responsive
        .table-responsive
          table.table.table-striped.table-bordered.table-hover
            thead
              tr
                th Descrição
            tbody
              tr(ng-repeat="projeto_lei in dados")
                td
                  .media-box
                      .media-box-body
                        .pull-right.btn.btn-default.btn-sm Detalhes
                        a(ng-href="#/app/proposicao?p={{projeto_lei.fields.SLP_NOME}}")
                          h4.media-box-heading {{projeto_lei.fields.SLP_NOME}}
                        small.text-muted(ng-if="projeto_lei.fields.SLR_NOME != undefined") Outros Nomes: {{projeto_lei.fields.SLR_NOME}}
                        br(ng-if="projeto_lei.fields.SLR_NOME != undefined")
                        small.text-muted Autor: {{projeto_lei.fields.SLPa_NOME_FANTASIA}}
                        br
                        small.text-muted Tema: {{projeto_lei.fields.SLP_TEMA}}
                        p {{projeto_lei.fields.SLP_EMENTA}}

        // END table-responsive
        .panel-footer
          .row
            .col-lg-2
              button.btn.btn-md.btn-default.pull-center(ng-click="filtro_casas()") Mais
      // END panel

    .col-lg-3
      h3.m0.pb-lg Filtros
      //filtro por casas legislativas
      .form-group.mb-xl
        label.control-label.mb Casas Legislativas
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="casas_marcadas.CN", ng-click="change_filtro_casas()")
          |  Congresso Nacional
          span.pull-left.fa.fa-check
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="casas_marcadas.CD", ng-click="change_filtro_casas()")
          |  Camara dos Deputados
          span.pull-left.fa.fa-check
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="casas_marcadas.SF", ng-click="change_filtro_casas()")
          |  Senado Federal
          span.pull-left.fa.fa-check
        br

      //filtro por estado do projeto de lei
      //.form-group.mb-xl
        label.control-label.mb Estado do PL
        br
        select.chosen-select.form-control(chosen="", ng-model="filtros.status")
          option(value="") Todos
          option(value="0") Nao Tramitando
          option(value="1") Tramitando
      //filtro por tipo de projeto de lei
      .form-group.mb-xl
        label.control-label.mb Tipo de PL
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="tipos_lei.PL", ng-click="change_filtro_tipos_lei()")
          |  Projeto de Lei Ordinário
          span.pull-left.fa.fa-check
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="tipos_lei.PLComp", ng-click="change_filtro_tipos_lei()")
          |  Projeto de Lei Complementar
          span.pull-left.fa.fa-check
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="tipos_lei.MPV", ng-click="change_filtro_tipos_lei()")
          |  Medida Provisoria
          span.pull-left.fa.fa-check
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="tipos_lei.PLN", ng-click="change_filtro_tipos_lei()")
          |  Projeto de Lei Nacional
          span.pull-left.fa.fa-check
        br
        label.checkbox-inline.c-checkbox
          input(type='checkbox', ng-model="tipos_lei.PEC", ng-click="change_filtro_tipos_lei()")
          |  Proposta de Emenda Constitucional
          span.pull-left.fa.fa-check
        br

      .form-group.mb-xl
        label.control-label.mb Ano
        br
        p.input-group
          input.form-control(type="number", min="1980", max="2015", ng-model="ano" ng-blur="change_filtro_ano()")

      button.btn.btn-md.btn-default(ng-click="limpar_filtros()") Limpar Filtros
